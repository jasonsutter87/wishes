<div class="container">
	<h1>Edit your wish!</h1>
</div>
<div class="container">
	<div class="col-sm-10">
		<% if @error %>
		<%= @error %>
		<% end %>
		<form action="/wishes/<%=  @wish.id %>" method="post">
			<input id="hidden" type="hidden" name="_method" value="put">

			<fieldset class="form-group">
				<label for="title">Title</label>
				<input type="text" class="form-control" id="title"  name="wish[title]"placeholder="Place an amazing title here">
			</fieldset>

			<fieldset class="form-group">
				<label for="content">Content <em style="color: #808080;">140 Characters or less</em></label>
				<textarea style="resize:none;" class="form-control" rows="3" id="content" name="wish[content]" placeholder="Cool awesome wish goes here" maxlength="140"></textarea>
			</fieldset>
			<input class="btn btn-success btn-sm" name="Keep Edits" type="submit" value="Done">
			<a href="/users/<%=  @wish.user_id %>" class="btn btn-danger btn-sm" value="Cancel" name="Cancel">Cancel</a>
		</form>
	</div>
</div><br><br><br><br>





