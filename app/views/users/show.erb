<div class="center">
  <h3><%= "Hello #{@user.username}!" %></h3>
 	 <h4><%= "You have  $#{@user.wallet} dollars in your account !" %></h4>
</div>

<h5 class="center">These are your wishes</h5>

<div class="container">
         <div class="row">
          <% @wishes.each do |wish| %>
          
          <div class="col-sm-3 col-lg-3 col-md-3" ">
            <div class="thumbnail">
                <div class="caption" style="height: 350px";>
                    <h4 class="pull-left">
                     <img src="<%= wish.url %>" style="height: 35px; width: 35px";>
                 </h4>
                 <h4 class="pull-right">$<%= wish.price %></h4>
                 <h4 class="center">
                    <%= wish.title%>
                </h4>

                <h5 class="center">Wish made by: <%= User.find(wish.user_id).username %></h5>
             
                <p>&nbsp;&nbsp;&nbsp;<%= wish.content%> ...</p>
                <br>
               <form action="/wishes/<%=  wish.id %>" method="post" style="position: absolute; bottom: 10%";>
  <input type="hidden" name="_method" value="delete">
  <a href="/wishes/<%=  wish.id %>" class="btn btn-primary btn-sm" value="Show" name="Show">Show</a>
<a href="/wishes/<%=  wish.id %>/edit" class="btn btn-success btn-sm" value="Edit" name="Edit">Edit</a>
  <input type="submit"  class="btn btn-danger btn-sm" value="Delete Wish">
</form>
            </div>
            <br>
        </div>
    </div>

    <% end %>